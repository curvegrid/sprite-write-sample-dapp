{
  "name": "multibaas-spritewrite-hardhat-project",
  "version": "1.0.0",
  "description": "MultiBaas Sprite Write Hardhat Project",
  "main": "index.js",
  "author": "Curvegrid Inc.",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "npx hardhat compile",
    "test": "yarn build && npx mocha --require hardhat/register --recursive --parallel --exit",
    "test:serial": "npx hardhat testserial",
    "coverage": "npx hardhat coverage",
    "deploy:spritewrite:dev": "HARDHAT_NETWORK=development npx hardhat run scripts/deploy.js",
    "deploy:spritewrite:testing": "HARDHAT_NETWORK=testing npx hardhat run scripts/deploy.js",
    "deploy:spritewrite:staging": "HARDHAT_NETWORK=staging npx hardhat run scripts/deploy.js",
    "deploy:spritewrite:production": "HARDHAT_NETWORK=production npx hardhat run scripts/deploy.js",
    "lint:solhint": "solhint --max-warnings 0 \"contracts/{*,**/*}.sol\"",
    "format:solhint": "yarn lint:solhint --fix",
    "lint:prettier": "prettier \"contracts/{*,**/*}.sol\"",
    "format:prettier": "yarn lint:prettier --write",
    "lint:eslint": "eslint \"{*,**/*}.js\"",
    "format:eslint": "yarn lint:eslint --fix",
    "lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:solhint",
    "format": "yarn format:prettier && yarn format:eslint && yarn format:solhint",
    "clean": "npx hardhat clean && rm -rf cache"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/contracts-upgradeable": "^4.5.2",
    "@openzeppelin/hardhat-upgrades": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "chai": "^4.2.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.9.1",
    "hardhat-multibaas-plugin": "^0.1.2",
    "husky": "^4.3.8",
    "istanbul-combine-updated": "^0.3.0",
    "lint-staged": "^12.3.7",
    "operator-filter-registry": "^1.4.1",
    "path": "^0.12.7",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.2"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.json": "prettier --write",
    "*.sol": [
      "prettier --write",
      "solhint --fix"
    ]
  }
}
